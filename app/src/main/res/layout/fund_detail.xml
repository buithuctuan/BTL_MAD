<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:elevation="50dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <!-- Nút mũi tên sát lề trái -->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            app:srcCompat="@drawable/arrowleft"
            android:layout_gravity="bottom"
            android:onClick="goBack"
            android:layout_marginBottom="10dp"
            android:contentDescription="Nút quay lại"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Khoảng trống để căn giữa TextView -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Tiêu đề nằm giữa -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hũ chi tiêu"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:textStyle="bold"/>

        <!-- Khoảng trống phải (bằng mũi tên + margin) -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Ô trống này để giữ cân bằng, nhưng kích thước nó sẽ nhỏ hơn nếu mũi tên quá to -->
        <ImageButton
            android:id="@+id/update"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            app:srcCompat="@drawable/update_icon"
            android:layout_gravity="bottom"
            android:onClick="openEditDialog"
            android:layout_marginBottom="10dp"
            android:contentDescription="Nút sửa"
            android:background="?attr/selectableItemBackgroundBorderless"/>


    </LinearLayout>

    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="88dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="76dp"
        android:background="@android:color/transparent"
        android:contentDescription="Calender button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calender" />

    <LinearLayout
        android:id="@+id/totalIncome"
        android:layout_width="185dp"
        android:background="@drawable/bg_total_spending"
        android:layout_height="86dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="124dp"
        android:onClick="onTypeClick"
        android:gravity="start|top"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px"
            android:text="Tiền thu"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalIncomeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2px"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totalSpending"
        android:layout_width="185dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:gravity="start|top"
        android:orientation="vertical"
        android:onClick="onTypeClick"
        android:background="@drawable/bg_total_spending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px"
            android:text="Tiền chi"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalSpendingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2px"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchAndDisplayField"
        android:layout_width="410dp"
        android:layout_height="670dp"
        android:layout_marginTop="220dp"
        android:gravity="start|top"
        android:orientation="vertical"
        android:onClick="onTypeClick"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/search_icon"
                app:tint="#CCCCCC" />

            <EditText
                android:id="@+id/searchTransaction"
                android:layout_width="48dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Tìm giao dịch"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#CCCCCC" />

            <ImageView
                android:id="@+id/filterImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/filter"
                android:onClick="onSearchClick" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spendingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_transactions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/nav_item_color"
                android:src="@drawable/ic_menu_trang_chu" />

            <TextView
                android:id="@+id/label_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="12sp"
                android:textColor="@color/nav_item_color" />
        </LinearLayout>

        <!-- Thu-chi -->
        <LinearLayout
            android:id="@+id/nav_transactions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/nav_home"
            app:layout_constraintEnd_toStartOf="@id/nav_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_transactions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/nav_item_color"
                android:src="@drawable/ic_menu_thu_chi" />

            <TextView
                android:id="@+id/label_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu-chi"
                android:textSize="12sp"
                android:textColor="@color/nav_item_color" />
        </LinearLayout>

        <!-- Thêm giao dịch -->
        <LinearLayout
            android:id="@+id/nav_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_statistics"
            app:layout_constraintStart_toEndOf="@id/nav_transactions"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menu_them_giao_dich" />

            <TextView
                android:id="@+id/label_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Thống kê -->
        <LinearLayout
            android:id="@+id/nav_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/nav_add"
            app:layout_constraintEnd_toStartOf="@id/nav_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_statistics"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/nav_item_color"
                android:src="@drawable/ic_menu_thong_ke" />

            <TextView
                android:id="@+id/label_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textSize="12sp"
                android:textColor="@color/nav_item_color" />
        </LinearLayout>

        <!-- Cá nhân -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/nav_statistics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/nav_item_color"
                android:src="@drawable/ic_menu_ca_nhan" />

            <TextView
                android:id="@+id/label_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:textSize="12sp"
                android:textColor="@color/nav_item_color" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
